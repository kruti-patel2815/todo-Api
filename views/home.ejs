<!DOCTYPE html>
<html>
<head>
    <title>Todo App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { padding: 20px; background: #f5f5f5; }
        .card { margin-bottom: 15px; }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="my-4">Todo List</h1>
        
        <a href="/todos/new" class="btn btn-success mb-3">Add New</a>
        <a href="/api/todos" class="btn btn-primary mb-3" target="_blank">ðŸ“¡ API</a>
        
        <% if (todos.length > 0) { %>
            <div class="row">
                <% todos.forEach(todo => { %>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5><%= todo.title %></h5>
                            <p><%= todo.description %></p>
                            <p><small>Priority: <%= todo.priority %></small></p>
                            <div>
                                <a href="/todos/edit/<%= todo._id %>" class="btn btn-warning btn-sm">Edit</a>
                                <a href="/todos/delete/<%= todo._id %>" class="btn btn-danger btn-sm" 
                                   onclick="return confirm('Delete?')">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="alert alert-info">No todos yet!</div>
        <% } %>
    </div>
</body>
</html>